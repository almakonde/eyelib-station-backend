    "version": "0.2.0",
    "configurations": [
        {
            "name": "station backend",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}\\station_backend\\main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "autoReload": {"enable": true}
        },
        {
            "name": "Dummy Exams server",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}\\demos\\dummy_examinations_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        }
    ]
}